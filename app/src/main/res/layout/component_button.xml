<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_medium"
        android:background="@drawable/shape_rounded_background_filled"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <FrameLayout
            android:layout_width="@dimen/spacing_reset"
            android:layout_height="@dimen/spacing_reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_btn_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineHeight="@dimen/text_regular"
                android:text="Lore ipsum"
                android:textColor="@color/white"
                android:textSize="@dimen/text_regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressbar_btn_chat"
                android:layout_width="@dimen/size_progress_bar"
                android:layout_height="@dimen/size_progress_bar"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white"
                android:visibility="gone" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>